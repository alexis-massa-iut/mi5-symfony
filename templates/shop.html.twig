{% extends "base.html.twig" %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for categorie in categories %}
				<div class="card text-center m-2" style="width: 18rem;">
					<img class="card-img-top" src="{{asset(categorie.img)}}" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">{{ categorie.name}}</h5>
						<p class="card-text">{{categorie.text}}</p>
						<a href="#" class="btn btn-primary">Voir</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
