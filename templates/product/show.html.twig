<!DOCTYPE html>

<title>Product</title>

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ product.img }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ product.text }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>



    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    
{% endblock %}
