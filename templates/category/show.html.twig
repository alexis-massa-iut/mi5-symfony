{% extends 'common/base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td>{{ category.img }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ category.text }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

    
{% endblock %}
