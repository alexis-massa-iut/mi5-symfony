{% extends "common/base.html.twig" %}
{% block title %}
	Shop: {{category.name}}
{% endblock %}
{% block body %}
	<h3>Produits de la catégorie: {{category.name}}</h3>
	<div class="container">
		<div class="row">
			{% for product in products %}
				<div class="card text-center m-2" style="width: 18rem;">
					<img class="card-img-top" src="{{asset(product.img)}}" alt="Card image cap">
					<div class="card-body">
						<h5 class="card-title">{{ product.name}}</h5>
						<p class="card-text">{{product.text}}</p>
						<p class="card-text">{{product.price}}€</p>
						<a href="{{ path('cart_add', {'idProduct': product.id, 'amount': 1}) }}" class="btn btn-primary">Ajouter au panier</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
